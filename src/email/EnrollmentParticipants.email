<messaging:emailTemplate recipientType="User"
  relatedToType="EnrollmentPlan__c"
  subject="Participant report for Enrollment Plan: {!relatedTo.name}"
  replyTo="Harold.Crouse@nttdata.com"> <!--make this dynamic custom setting or somethin -->
  <messaging:htmlEmailBody >
    <html>
      <body>
        <STYLE type="text/css">
          TH {font-size: 11px; font-face: arial;background: #CCCCCC;
               border-width: 1;  text-align: center }
          TD  {font-size: 11px; font-face: verdana }
          TABLE {border: solid #CCCCCC; border-width: 1}
          TR {border: solid #CCCCCC; border-width: 1}
        </STYLE>
        <font face="arial" size="2">
          <p>Dear {!recipient.name},</p>
          <p>Below is a list of Participants related to the Enrollment Plan: {!relatedTo.name}.</p>
          <table border="0" >
            <tr >
               <th>Employee</th>
               <th>Employee Number</th>
               <th>Role/Title</th>
               <th>Participant Category</th>
               <th>Target %</th>
            </tr>
            <apex:repeat var="cx" value="{!relatedTo.EnrollmentParticipants__r}">
              <tr>
                <td>{!cx.EmployeeName__r.Name}</td>
                <td>{!cx.EmployeeID__c}</td>
                <td>{!cx.RoleTitle__c}</td>
                <td>{!cx.ParticipantCategory__c}</td>
                <td>{!cx.TargetIncentivePoolAllocated__c}</td>
              </tr>
            </apex:repeat>                
          </table>
          <p />
        </font>
      </body>
    </html>
  </messaging:htmlEmailBody>
  <messaging:plainTextEmailBody >
    Dear {!recipient.name},
     
    Below is a list of Participants related to the Enrollment Plan: {!relatedTo.name}.
     
    [ Employee ] - [ Employee ID ] - [ Role/Title ] - [ Participant Category ] - [ Target % ]
     
    <apex:repeat var="cx" value="{!relatedTo.EnrollmentParticipants__r}">
      [ {!cx.EmployeeName__r.Name} ] - [ {!cx.EmployeeID__c} ] - [ {!cx.RoleTitle__c} ] - [ {!cx.ParticipantCategory__c} ] - [ {!cx.TargetIncentivePoolAllocated__c} ]
    </apex:repeat>
     
    For more information login to http://www.salesforce.com
  </messaging:plainTextEmailBody>   
</messaging:emailTemplate>