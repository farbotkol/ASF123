        </assignedApprover>
        <entryCriteria>
            <formula>ISNULL(CreatedDate )</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>PnL Manager</label>
        <name>PnLManager</name>
    </approvalStep>
    <emailTemplate>EcoSystem_Templates/EcoTestApproval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Eco_Set_Go_No_Go_Date</name>
