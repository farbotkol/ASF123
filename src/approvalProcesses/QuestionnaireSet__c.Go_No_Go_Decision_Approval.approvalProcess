            <name>EcoSystem_Final_Approval_for_Go_No_Go</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EcoApproval_Set_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Go/No Go Decision Approval</label>
    <nextAutomatedApprover>
