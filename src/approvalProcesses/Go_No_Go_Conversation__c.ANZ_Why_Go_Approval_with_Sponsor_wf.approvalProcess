            <approver>
                <name>Project_Sponsor__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Project Sponsor Approval</label>
        <name>ANZ_Project_Sponsor_Approval</name>
    </approvalStep>
