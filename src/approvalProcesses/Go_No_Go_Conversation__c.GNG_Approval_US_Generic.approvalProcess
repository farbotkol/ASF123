    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Request that the Approver selected by the user review and approve or reject the Go decision.</description>
        <label>GNG - Go Approval Request</label>
        <name>GNG_Go_Approval_Request</name>
    </approvalStep>
    <description>Approval process following Go decision and prior to requesting assignment of a B&amp;P number, for opportunities where lead region is in the US (email is in English only)</description>
    <emailTemplate>CMC_North_America/GNG_Approval_Request_English_only</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Go_No_Go_Conversation__c.Decision__c</field>
            <operation>equals</operation>
            <value>Go</value>
        </criteriaItems>
        <criteriaItems>
            <field>Go_No_Go_Conversation__c.Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Go_No_Go_Conversation__c.Opportunity_Lead_Region__c</field>
            <operation>notContain</operation>
            <value>CAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Go_No_Go_Conversation__c.Open_a_discrete_B_P_Number__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
