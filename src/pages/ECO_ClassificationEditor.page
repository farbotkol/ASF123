<apex:page standardController="pse__Proj__c" extensions="ECO_ClassificationEditorController" showHeader="true" sidebar="true">
    <style>
        .message{
            background-color: #A2D3F1;
        }
    </style>
    <apex:sectionHeader title="Classification Editor" subtitle="{!pse__Proj__c.ProjectSectionHeaderName__c}" />

    <apex:form >
        <apex:pageMessages />
        <apex:pageMessage id="headerSummaryMessage" severity="info"  escape="false"  summary="
                    Classifications capture the key attributes of a project that are used to support business analytics by our marketing and business line leaders.  The classification fields listed below are configured to the project's primary organization to ensure the selected values accurately capture the relevant project work, market and client information.   Select the appropriate values from the drop down lists that best reflect the primary or overarching attributes of the project.  
                    <br /><br />
                    Identifying project classifications is required prior to syncing the project to Oracle.  Classifications cannot be changed once the project has been synced." />
        <apex:pageBlock title="Classification Manager">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!Save}" value="Save" />
                <apex:commandButton action="{!Cancel}" value="Return to Project" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Oracle Classification" collapsible="false" columns="2">
                <apex:repeat value="{!lClassifications}" var="fsmWrap">
                    <apex:inputField value="{!oProject[fsmWrap.fsm.fieldPath]}" required="{!OR(fsmWrap.isRequired, fsmWrap.fsm.required, fsmWrap.fsm.dbrequired)}"/>
                </apex:repeat>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>    
</apex:page>